doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Demos
    style.
      * {
        margin: 0;
        padding: 0;
      }

      html, body {
        height: 100%;
        font-family: "Calibri Light", Calibri, Arial, sans-serif;
      }

      #side {
        position: absolute;
        padding: 20px;
        width: 210px;
        height: 100%;
        border-right: solid #bbb 2px;
      }

      h1 {
        font-size: 32px;
        padding-bottom: 16px;
      }

      h2 {
        padding: 16px 0;
        color: #666;
        font-size: 20px;
      }

      #container {
        padding-left: 250px;
        width: calc(100% - 250px);
        height: calc(100% - 2px);
      }

      #side a {
        display: block;
        padding: 2px 0;
        text-decoration: none;
        color: #28B;
      }

      #side a:hover {
        text-decoration: underline;
      }

      #container iframe {
        width: 100%;
        height: 100%;
      }
